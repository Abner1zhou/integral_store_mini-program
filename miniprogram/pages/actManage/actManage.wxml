<!--miniprogram/pages/actManage/actManage.wxml-->
<view class='tapCard'>
  <view class="addCard {{cardNum === 1 ? 'tapOn':'tapOff'}} " bindtap='tapTo1'>已支付</view>
  <view class="deliver {{cardNum === 3 ? 'tapOn':'tapOff'}} " bindtap='tapTo3'>已签收</view>
  <view class="deliver {{cardNum === 4 ? 'tapOn':'tapOff'}} " bindtap='tapTo4'>所有订单</view>
</view>

<!-- 待审核 -->
<view class='addFruit' wx:if="{{cardNum === 1}}">

  <view class='theList'>

    <view class="weui-cells weui-cells_after-title">

      <view wx:for="{{reviewList}}" wx:key="idx" class='listItem'>
        <view class='f_column'>
          <view>标题：{{item.activity.title}}</view>
          <view>创建人：{{item.creator}}</view>
          <view>日期：{{item.activity.date + "  " + item.activity.clock}}</view>
          <view>奖励积分：{{item.activity.coins}}</view>
          <view>活动描述：{{item.activity.introduction}}</view>
          <view>下单时间：{{item.second}}</view>
        </view>

        <view class='Btns'>
          <view class='downBtn' bindtap='reviewPass' id="{{item._id}}">审核通过</view>
          <view class='downBtn' bindtap='reviewDeny' id="{{item._id}}">打回</view>
        </view>
      </view>

    </view>

  </view>
</view>

<!-- 已审核 -->
<view class='addFruit' wx:if="{{cardNum === 3}}">

  <view class='theList'>

    <view class="weui-cells weui-cells_after-title">
      <view wx:for="{{orderList}}" wx:key="pay" class='listItem' wx:if="{{item.finished}}">
        <view class='f_column'>
          <view>{{item.name}}</view>
          <view>{{item.phone}}</view>
          <view>{{item.group}}</view>
          <view>总价：{{item.total}}</view>
          <view>订单内容：</view>
          <view wx:for="{{item.fruitList}}" wx:for-item="fruitArr" wx:key="fruit">{{fruitArr[0]}} × {{fruitArr[1]}}
          </view>
          <view>送达时间：{{item.finishedTime}}</view>
        </view>
      </view>

      <view class='Btns'>
        <view class='downBtn' bindtap='reviewPass' id="{{item._id}}">下架活动</view>
      </view>
    </view>

  </view>
</view>

<!-- 所有订单 -->
<view class='addFruit' wx:if="{{cardNum === 4}}">

  <view class='theList'>

    <view class="weui-cells weui-cells_after-title">
      <view wx:for="{{orderList}}" wx:key="pay" class='listItem'>
        <view class='f_column'>
          <view>{{item.name}}</view>
          <view>{{item.phone}}</view>
          <view>{{item.schoolName}}/{{item.addressItem}}/{{item.detail}}</view>
          <view>总价：{{item.total}}</view>
          <view>订单内容：</view>
          <view wx:for="{{item.fruitList}}" wx:for-item="fruitArr" wx:key="fruit">{{fruitArr[0]}} × {{fruitArr[1]}}
          </view>
          <view>备注：{{item.message}}</view>
          <view>下单时间：{{item.orderTime}}</view>
          <view>送达时间：{{item.finishedTime}}</view>
          <view wx:if="{{item.paySuccess}}">状态：未支付</view>
          <view wx:if="{{item.finished}}">状态：已送达</view>
          <view wx:if="{{item.paySuccess && !item.sending}}">状态：已支付/待发货</view>
          <view wx:if="{{item.sending && !item.finished}}">状态：已发货</view>
        </view>
      </view>
    </view>

  </view>
</view>