<view class="main">
    <view class="form-box">
        <form bindsubmit="formSubmit">
            <input value="{{name}}" name="name" placeholder="姓名"/>
            <input value="{{group}}" name="group" placeholder="部门"/>
            <input type="digit" name="phone" value="{{phone}}" placeholder="电话号码"/>
            <button form-type="submit">保存</button>
        </form>
    </view>

</view>
