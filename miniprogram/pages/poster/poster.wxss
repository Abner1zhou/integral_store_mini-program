/* miniprogram/pages/poster/poster.wxss */
.page_bd {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
}

.noteam {
  height: 60%;
  width: 80%;
  text-align: center;
}

/* page {
  height: 100%;
} */

.remind_font {
  color: #fc766a;
  font-size: 40;
}

.activities {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: absolute;
}

.scroll {
  background-color: rgb(241, 241, 241);
}

.external {
  width: 90%;
  height: 540rpx;
  border: 1px solid rgb(241, 241, 241);
  position: relative;
  border-radius: 10rpx;
  margin-left: 5%;
  margin-bottom: 30rpx;
  background-color: white;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.userUrl {
  width: 20%;
  height: 50rpx;
  margin-left: 4%;
  margin-top: 2%;
  display: inline-block;
}

.userTitle {
  position: absolute;
  left: 30%;
  right: 4%;
  top: 2%;
  font-size: 30rpx;
}

.userDes {
  position: absolute;
  left: 8%;
  right: 4%;
  top: 35%;
  word-break: break-all; /*允许在单词内换行*/
  text-align: left;
  text-overflow: -o-ellipsis-lastline; /*css3中webkit内核提供的一个方法类似ellipsis*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box; /*自适应盒子*/
  -webkit-line-clamp: 2; /*此处为1行,如果是两行就改成2*/
  -webkit-box-orient: vertical;
}

.small_font {
  font-size: small;
  color: #bbb;
}

.userDate {
  position: absolute;
  left: 30%;
  top: 17%;
}

.userClock {
  position: absolute;
  left: 30%;
  top: 23%;
}

.userCoin {
  position: absolute;
  left: 30%;
  top: 29%;
}

.photoArea {
  position: absolute;
  bottom: 12%;
  left: 8%;
  height: 40%;
  right: 40%;
}

.userImages {
  width: 32%;
  height: 100%;
  display: inline-block;
}

.people {
  position: absolute;
  bottom: 3%;
  right: 12%;
}

@keyframes transplus {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(45deg);
  }
}
@-webkit-keyframes transplus /* Safari 和 Chrome */
{
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(45deg);
  }
}
.plus {
  position: fixed;
  right: 3%;
  bottom: 3%;
  border-radius: 50%;
}
.plus-around{
  animation: transplus 1s;
}
.hoverBtn{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px rgb(241, 241, 241) inset; 
}
