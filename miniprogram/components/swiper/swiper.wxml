<!--components/swiper/swiper.wxml-->

<view class='swiperContainer'>
  <swiper class="swiper_box" autoplay="true" interval="5000" circular="true">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="750rpx" height="500rpx" mode='aspectFill' bindtap="goToPoster" data-FID="9f2a34705fdc4c1d001a7b5c2b7f0c4d"/>
      </swiper-item>
    </block>
  </swiper>
</view>